                background_color: 182/255, 193/255, 194/255,1
                font_size: 32
            Button:
                text:"5"
                background_normal: ""
                background_color: 182/255, 193/255, 194/255,1
                font_size: 32
            Button:
                text:"6"
                background_normal: ""
                background_color: 182/255, 193/255, 194/255,1
                font_size: 32
            Button:
                text:"-"
                
                font_size: 32


            Button:
                text:"1"
