#:kivy 2.1.0
   

<calLayout>
    BoxLayout:
        padding: 10
        spacing: 10
        orientation: 'vertical'
        size: root.width, root.height

        Label:
            id: input
            text: "0"
            font_size: 46
            size_hint:(1, 0.15)
            color: 0, 0, 0, 1
            text_size: self.size
            halign:'right'
            background_color: 215/255, 222/255, 217/255, 1
            canvas.before:
                Color:
                    rgba: self.background_color
                Rectangle:
                    pos: self.pos
                    size: self.size

        GridLayout:
            cols: 4
            rows: 5
            spacing: 5
            
            Button:
                text:"%"
                font_size: 32
                on_press:root.pressBtnSign("%")
                background_color: (0,0,0,0)
	            background_normal: ''
	            canvas.before:
		            Color:
			            rgba: (80/255, 80/255, 80/255,1)
		            RoundedRectangle:
			            size: self.size
			            pos: self.pos
			            radius: [100]
                
            Button:
                text:u"\u00AB" 
                font_size: 32
                on_press:root.backspace()
                background_color: (0,0,0,0)
	            background_normal: ''
	            canvas.before:
		            Color:
			            rgba: (80/255, 80/255, 80/255,1)
		            RoundedRectangle:
			            size: self.size
			            pos: self.pos
			            radius: [100]
            Button:
                text:"C"
                on_press: root.clear()
                font_size: 32
                background_color: (0,0,0,0)
	            background_normal: ''
	            canvas.before:
		            Color:
			            rgba: (80/255, 80/255, 80/255,1)
		            RoundedRectangle:
			            size: self.size
			            pos: self.pos
			            radius: [100]
            oprButton:
                text:"/"
                background_normal: ""
                
                font_size: 32
                on_press:root.pressBtnSign("/")
            
            numButton:
                text:"7"
                background_normal: ""

                font_size: 32
                on_press:root.pressBtnNumber(7)
            numButton:
                text:"8"
                background_normal: ""

                font_size: 32
                on_press:root.pressBtnNumber(8)
            numButton:
                text:"9"
                background_normal: ""

                font_size: 32
                on_press:root.pressBtnNumber(9)
            oprButton:
                text:"x"
                
                font_size: 32
                on_press:root.pressBtnSign("*")
                background_normal: ""
                

            numButton:
                text:"4"
                background_normal: ""

                font_size: 32
                on_press:root.pressBtnNumber(4)
            numButton:
                text:"5"
                background_normal: ""

                font_size: 32
                on_press:root.pressBtnNumber(5)
            numButton:
                text:"6"
                background_normal: ""

                font_size: 32
                on_press:root.pressBtnNumber(6)
            oprButton:
                text:"-"
                
                font_size: 32
                on_press:root.pressBtnSign("-")
                background_normal: ""
                

            numButton:
                text:"1"
                background_normal: ""

                font_size: 32
                on_press:root.pressBtnNumber(1)
            numButton:
                text:"2"
                background_normal: ""

                font_size: 32
                on_press:root.pressBtnNumber(2)
            numButton:
                text:"3"
                background_normal: ""

                font_size: 32
                on_press:root.pressBtnNumber(3)
            oprButton:
                text:"+"
                
                font_size: 32
                on_press:root.pressBtnSign("+")
                background_normal: ""
                


            numButton:
                text:"+/-"
                background_normal: ""

                font_size: 32
                on_press: root.pressBtnminus()
            numButton:
                text:"0"
                background_normal: ""

                font_size: 32
                on_press:root.pressBtnNumber(0)
            numButton:
                text:"."
                background_normal: ""

                font_size: 32
                on_press: root.pressBtnDot()
                
            oprButton:
                text:"="
                
                font_size: 32
                on_press:root.pressBtnEqual()
                background_normal: ""
                
        

<numButton@Button>:
    background_color: (0,0,0,0)
	background_normal: ''
	canvas.before:
		Color:
			rgba: (28/255, 28/255, 28/255,1)
		RoundedRectangle:
			size: self.size
			pos: self.pos
			radius: [100]
<oprButton@Button>:
    background_color: (0,0,0,0)
    background_normal: ''
	canvas.before:
		Color:
			rgba: (255/255, 149/255, 0/255,1)
		RoundedRectangle:
			size: self.size
			pos: self.pos
			radius: [100]
