#:kivy 2.1.0
<calLayout>
    BoxLayout:
        padding: 5
        spacing: 5
        orientation: 'vertical'
        size: root.width, root.height

        Label:
            id: input
            text: "0"
            font_size: 46
            size_hint:(1, 0.15)
            color: 0, 0, 0, 1
            text_size: self.size
            halign:'right'
            background_color: 215/255, 222/255, 217/255, 1
            canvas.before:
                Color:
                    rgba: self.background_color
                Rectangle:
                    pos: self.pos
                    size: self.size

        GridLayout:
            cols: 4
            rows: 5
            spacing: 5
            
            Button:
                text:"%"
                
                font_size: 32
            Button:
                text:"CE"
                
                font_size: 32
            Button:
                text:"C"
                on_press: root.clear()
                font_size: 32
            Button:
                text:"/"
                
                font_size: 32

            
            Button:
                text:"7"
                background_normal: ""
                background_color: 182/255, 193/255, 194/255,1
                font_size: 32
            Button:
                text:"8"
                background_normal: ""
                background_color: 182/255, 193/255, 194/255,1
                font_size: 32
            Button:
                text:"9"
